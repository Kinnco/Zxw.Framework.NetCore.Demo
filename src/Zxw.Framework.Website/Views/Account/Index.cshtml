<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="https://github.com/VictorTzeng/Zxw.Framework.NetCore" target="_blank"><b>Zxw.Framework.NetCore</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">欢迎使用</p>

            <form action="@Url.Action("SignIn")" method="post" role="form" id="login-form">
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="用户名/电话/邮箱" name="account" required>
                    <span class="fa fa-user-circle form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="密码" name="password" required>
                    <span class="fa fa-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-4 pull-right">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

